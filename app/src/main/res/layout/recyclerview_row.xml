<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/pokemonImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/tvAnimalName"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvAnimalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemonImageView"
        android:textSize="17sp"
        tools:text="Bulbasaur" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvAnimalName"
        android:layout_alignBottom="@+id/tvAnimalName"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-2dp"
        android:layout_toRightOf="@+id/tvAnimalName"
        />

</RelativeLayout>